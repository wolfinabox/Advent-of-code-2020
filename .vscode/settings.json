{
    "python.linting.pylintArgs": [
        "--errors-only,--unsafe-load-any-extension=y"
    ],
    "editor.detectIndentation": false,
    "editor.tabSize":4,
    "editor.insertSpaces": true,
    "python.envFile": "${workspaceFolder}/.env",
    "files.exclude": {
        // "env": true,
        // "*.spec":true,
        "build":true,
        ".gitattributes":true,
        ".gitmodules":true,
        "LICENSE":true,
        "**/__pycache__":true,
    },
}